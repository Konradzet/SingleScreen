<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="picture">
        <item name="android:src">@drawable/bg</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/all_text_left_margin</item>
    </style>

    <style name="MarginalText" parent="TextView">
        <item name="android:layout_marginTop">@dimen/marginal_text_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/marginal_text_margin_bottom</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="TextH1" parent="MarginalText">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="TextH2" parent="TextView">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/textH2</item>
        <item name="android:alpha">0.75</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/icon_to_text_padding</item>
    </style>

    <style name="TextH3" parent="MarginalText">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:layout_marginRight">@dimen/all_text_left_margin</item>
        <item name="android:textColor">@color/textH2</item>
        <item name="android:alpha">0.60</item>

        <item name="android:drawablePadding">@dimen/marginal_text_margin_bottom</item>
    </style>



</resources>